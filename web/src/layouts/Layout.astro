---
interface Props {
  title: string;
  icon?: string;
  auth?: boolean;
}

const { title, auth, icon = "/favicon.svg" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={icon} />
    <title>{title}</title>
    {
      auth && (
        <script type="module">
          localStorage.getItem("user") || location.replace("/");
        </script>
      )
    }
  </head>
  <body class="min-h-screen grid">
    <slot />
    <style is:global>
      html {
        font-family: system-ui, sans-serif;
      }
    </style>
  </body>
</html>
