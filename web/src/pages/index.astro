---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Inicio de sesión">
  <div class="login-container">
    <div class="login-box">
      <div class="login-form">
        <form action="#" method="post">
          <div class="input-container">
            <label for="usuario">USUARIO</label>
            <input
              type="text"
              id="usuario"
              name="usuario"
              required
              style="background-color: #deedf4;"
            />
          </div>
          <div class="input-container">
            <label for="contraseña">CONTRASEÑA</label>
            <input
              type="password"
              id="contraseña"
              name="contraseña"
              required
              style="background-color: #deedf4;"
            />
          </div>
          <button type="submit" class="btn-ingresar">ENTRAR</button>
        </form>
      </div>
    </div>
  </div>
  <div class="image-container">
    <img src="/inicio/footer.png" alt="Imagen" />
  </div>
</Layout>

<style>
  body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    min-height: 100vh;
    background-image: url("/inicio/fondo.png");
    background-repeat: repeat;
  }

  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin-top: -50px;
  }

  .login-box {
    width: 100%; /* Ajustar al 100% del nuevo ancho de login-container */
    max-width: 320px; /* Tamaño máximo ajustado */
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .login-box:before {
    content: "";
    display: block;
    width: 100%;
    height: 150px;
    background: url("/inicio/header_ufg.png") no-repeat center/cover;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }

  .login-form {
    padding: 20px;
  }

  .input-container {
    position: relative;
    margin-bottom: 20px;
  }

  .input-container label {
    position: absolute;
    top: 0;
    left: 0;
    font-size: 14px;
    color: #6a849f;
    font-weight: bold;
    transition: all 0.3s ease-in-out;
    padding-left: 10px;
  }

  .input-container input {
    width: calc(100% - 40px);
    height: 2px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 20px;
    outline: none;
    padding-left: 25px;
    margin-top: 20px;
  }

  .login-form .btn-ingresar {
    width: 100px;
    padding: 10px;
    color: #6a849f; /* Color azul */
    font-weight: bold;
    background-color: transparent;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    float: right;
    margin-bottom: 20px;
  }

  .login-form .btn-ingresar:hover {
    color: #0056b3; /* Color azul más oscuro al pasar el mouse */
  }

  .image-container {
    margin-top: -170px;
    display: flex;
    justify-content: center;
  }

  .image-container img {
    width: calc(100% - 20px); /* Ajuste del ancho */
    max-width: 320px; /* Mismo ancho que login-container */
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  }
</style>
